{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2019"],

    // Improving type strictness
    "strict": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,

    // Compilation options
    "esModuleInterop": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
  },
  "exclude": ["cdk.out", "node_modules", "**/*.test.ts"]
}
